@model IEnumerable<ServiceDirectoryTemplate.Models.Volunteering>


<script type="text/javascript" language="javascript">
$(function () {
    $("#table-volunteering").tablesorter({widgets: ['zebra']});
});
function FilterVolunteering(str) {
    document.pagingVolunteering.filter.value = str;
    AjaxPaging('/Volunteering/List/@ViewBag.PremiseId', '#tabs-6', document.pagingVolunteering, document.pagingVolunteering.page.value);
}
function ActivateVolunteering(TeamID) {
    var re = confirm("Do you want to make this Volunteering active?");
    if (re) {
        $.ajax({
            url: "/Volunteering/MarkActivate",
            type: "GET",
            data: ({ id: TeamID}),
            dataType: "html",
            success: function (data) {
                if (data == "ok")
                    AjaxPaging('/Volunteering/List/@ViewBag.PremiseId', '#tabs-6', document.pagingVolunteering, document.pagingVolunteering.page.value);
                else {
                    alert('Have error while processing your request');
                    loaded();
                }
            },
            error: function () {
                alert('Reqest server error'); loaded();
            }
        }); 
    }
}
</script>
			<p style="color:#69a017;font-size:medium;margin-bottom:10px">Facilites List</p>
			<p>
			<span style="font-size:10px">
			<a href="javascript:FilterVolunteering('all')">All</a> | <a href="javascript:FilterVolunteering('0-9')">0-9</a> | <a href="javascript:FilterVolunteering('abcde')">A B C D E </a>
		| <a href="javascript:FilterVolunteering('fghij')">F G H I J</a> | <a href="javascript:FilterVolunteering('klmn')">K L M N</a> | <a href="javascript:FilterVolunteering('opqr')">O P Q R</a> 
		| <a href="javascript:FilterVolunteering('stuv')">S T U V</a> | <a href="javascript:FilterVolunteering('wxyz')">W X Y Z</a>
			</span>
			<span style="float:right;margin-right:10px"><a href="/Volunteering/Add/@ViewBag.PremiseId"><input type="button" value="Create" /></a> <input type="checkbox" @(ViewBag.Include=="true" ? "checked=checked":"") onchange="document.pagingVolunteering.include.value=this.checked;AjaxPaging('/Volunteering/List/@ViewBag.PremiseId','#tabs-6',document.pagingVolunteering,document.pagingVolunteering.page.value);" /> Include In-active</span>
			
			</p>
			
			<table class="sample" id="table-volunteering" width="750px">
            <thead>
				<tr style="font-weight:bold;background:#d6d8db">
					<th >Contact</th>
					<th >Purpose</th>
					<th >Number</th>
					<th >Start Date</th>
                    <th >End Date</th>
					<th>Is Active?</th>
				</tr>
			</thead>
            <tbody>	
				@foreach (var vol in Model) {
                <tr>
                    <td class="organisation-name">
                        <a title="Edit Information Volunteering" href="@(vol.VolunteeringIsActive == 1 ? "/Volunteering/Amend/" + vol.VolunteeringID : "javascript:ActivateVolunteering('" + vol.VolunteeringID + "')")">
                        @vol.Contact.FirstName
                        </a>
                    </td>
                    <td>
                        @vol.VolunteeringPurpose
                    </td>
                    <td>
                        @vol.VolunteerNos
                    </td>
                    <td>
                        @(vol.StartDate == null ? "" : ((DateTime)vol.StartDate).ToString("dd/MM/yyyy"))
                    </td>
                    <td>
                        @(vol.EndDate == null ? "" : ((DateTime)vol.EndDate).ToString("dd/MM/yyyy"))
                    </td>
                    <td>
                        @(vol.VolunteeringIsActive == 1 ? "Yes" : "No")
                    </td>
                </tr>
            }
				</tbody>
			</table>
			
		@{ Html.RenderAction("PagingHtml", "RefData", new {
         urlRequest = "/Volunteering/List/" + ViewBag.PremiseId,
         tagContainer = "#tabs-6",
         formName = "pagingVolunteering",
         page = ViewBag.Page,
         totalPage = ViewBag.TotalPage,
         filter = ViewBag.Filter,
         include = ViewBag.Include
         
        });  }

