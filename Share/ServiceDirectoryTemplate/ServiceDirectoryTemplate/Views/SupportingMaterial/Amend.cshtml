@model ServiceDirectoryTemplate.Models.SupportingMaterial
@{
    //Layout = null;
}
@{
    ViewBag.Title = "Add Supporting Material";
}
 <script type="text/javascript">
$(document).ready(function () {
 $("#AddMat").validate({
        errorLabelContainer: $("div.error"),
        rules: {
            URL: { required: true},
            Type: { required: true },
            AddedBy: { required: true },
            AddedDate: { required: true }
        },
        messages: {
            URL: {
                required: "Please input the URL"
            },
            Type: { required: "Please choose the Material Type" }
        }
    });
});
	</script>
   
    <form action="/SupportingMaterial/Update/@Model.MatID" name="AddMat" id="AddMat" method="post">
    <input type="hidden" name="SupportingMaterialID" value="@Html.DisplayFor(model => model.MatID)" />
<div class="container-right">
		<div class="table-content">
			<p style="text-align:left"><a title="List all Organisation" href="/Organisation/List">Organisation &gt;</a></p>
			<p style="color:#69a017;font-size:large;margin-bottom:10px;text-align:left">Supporting Material Details</p>
			<p>
			
			<span style="float:right;margin-right:10px">
            <input type="button" onclick="window.location='/SupportingMaterial/MarkInactivate/@Model.MatID'" value="In-activate" />
			<input type="submit" value="Save" /> 
			<a title="Return to amend Organisation" href="/Organisation/Amend/@Model.OrgID#tabs-5"><input type="button" value="Back" /></a> 
			</span>
			
			</p>
			<div id="tabs">
			<ul>
				<li><a href="#tabs-1">Details</a></li>
			</ul>
			<div id="tabs-1"><table class="table-only-border-out" width="750px">
				<tr>
					<td width="130px">URL &nbsp;<span style="color:red">*</span></td>
					<td width="240px"><input class="standar-textbox" type="text" name="URL"  value="@Html.DisplayFor(model => model.MatURL)" /></td>
					<td width="130px">Added By</td>
					<td width="240px"><input class="standar-textbox" type="text" name="AddedBy" readonly="readonly" value="@Html.DisplayFor(model => model.User.Account)" /></td>
				</tr>
				
				<tr>
					<td>Description</td>
					<td><textarea class="standar-textarea" name="Description">@Html.DisplayFor(model => model.MatDescription)</textarea></td>
					<td>Added Date</td>
					<td><input class="standar-textbox" type="text" name="AddedDate" readonly="readonly"  value="@Html.DisplayFor(model => model.MatAddDate)" /></td>
				</tr>
				
				<tr>
					<td>Type&nbsp;<span style="color:red">*</span></td>
					<td>
                        <select  class="standar-dropdown" name="Type" >
                        <option></option>
                            <option value="Doc" @if(Model.MatType.Equals("Doc")){ @("selected='selected'")}>Doc</option>
                            <option value="Pdf" @if (Model.MatType.Equals("Pdf")){ @("selected='selected'")}>Pdf</option>
                            <option value="Excel" @if (Model.MatType.Equals("Excel")){ @("selected='selected'")}>Excel</option>
                        </select>

                    </td>
					<td> </td>
					<td> </td>
				</tr>
				
			</table>
            </div>
            <div class="error"></div>
		</div>
		</div>
	</div>
    </form>
