@model IEnumerable<ServiceDirectoryTemplate.Models.Team>
@{
    ViewBag.Title = "List Team";
}

<script type="text/javascript" language="javascript">
$(function () {
    $("#table-team").tablesorter({widgets: ['zebra']});
});
function FilterTeamTab(str) {
    document.pagingTeam.filter.value = str;
    AjaxPaging('/Department/ListTeam/@ViewBag.DepID', '#tabs-2', document.pagingTeam, document.pagingTeam.page.value);
}
function ActivateTeam(TeamID) {
    var re = confirm("Do you want to make this Team active?");
    if (re) {
        $.ajax({
            url: "/Team/MarkActivate",
            type: "GET",
            data: ({ id: TeamID}),
            dataType: "html",
            success: function (data) {
                if (data == "ok")
                    AjaxPaging('/Department/ListTeam/@ViewBag.DepID', '#tabs-2', document.pagingTeam, document.pagingTeam.page.value);
                else {
                    alert('Have error while processing your request');
                    loaded();
                }
            },
            error: function () {
                alert('Reqest server error'); loaded();
            }
        }); 
    }
}
</script>
			<p style="color:#69a017;font-size:medium;margin-bottom:10px">Team List</p>
			<p>
			<span style="font-size:10px">
			<a href="javascript:FilterTeamTab('all')">All</a> | <a href="javascript:FilterTeamTab('0-9')">0-9</a> | <a href="javascript:FilterTeamTab('abcde')">A B C D E </a>
		| <a href="javascript:FilterTeamTab('fghij')">F G H I J</a> | <a href="javascript:FilterTeamTab('klmn')">K L M N</a> | <a href="javascript:FilterTeamTab('opqr')">O P Q R</a> 
		| <a href="javascript:FilterTeamTab('stuv')">S T U V</a> | <a href="javascript:FilterTeamTab('wxyz')">W X Y Z</a>
			</span>
			<span style="float:right;margin-right:10px"><a href="/Team/Add/@ViewBag.DepID"><input type="button" value="Create" /></a> <input type="checkbox" @(ViewBag.Include=="true" ? "checked=checked":"") onchange="document.pagingTeam.include.value=this.checked;AjaxPaging('/Department/ListTeam/@ViewBag.DepID','#tabs-2',document.pagingTeam,document.pagingTeam.page.value);" /> Include In-active</span>
			
			</p>
			
			<table class="sample" id="table-team" width="750px">
            <thead>
				<tr style="font-weight:bold;background:#d6d8db">
					<th >Team Name</th>
					<th >Address Line 1</th>
					<th >Postcode</th>
					<th >Contact</th>
					<th>Is Active?</th>
				</tr>
			</thead>
            <tbody>	
				@foreach (var team in Model) {
                <tr>
                    <td class="organisation-name">
                        <a title="Edit Information Team" href="@(team.TeamIsActive == 1 ? "/Team/Amend/" + team.TeamID : "javascript:ActivateTeam('" + team.TeamID + "')")">
                        @team.TeamName
                        </a>
                    </td>
                    <td>
                        @team.TeamAddr1
                    </td>
                    <td>
                        @team.TeamPostCode
                    </td>
                    <td>
                        @(team.LeadContactID==null?"":team.Contact.FirstName)
                    </td>
                    <td>
                        @(team.TeamIsActive == 1 ? "Yes" : "No")
                    </td>
                </tr>
            }
				</tbody>
			</table>
			
		@{ Html.RenderAction("PagingHtml", "RefData", new {
         urlRequest = "/Department/ListTeam/" + ViewBag.DepID,
         tagContainer = "#tabs-2",
         formName = "pagingTeam",
         page = ViewBag.Page,
         totalPage = ViewBag.TotalPage,
         filter = ViewBag.Filter,
         include = ViewBag.Include
         
        });  }

